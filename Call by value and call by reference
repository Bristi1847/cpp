#include <iostream>
using namespace std;

class Number {
    int x;
public:
    Number(int a = 0) {
        x = a;
    }

    
    void display() {
        cout << "Value of x: " << x << endl;
    }

  
    friend Number operator-(Number n);

    
    friend Number operator+(Number n1, Number n2);
};


Number operator-(Number n) {
    Number temp;
    temp.x = -n.x;
    return temp;
}

Number operator+(Number n1, Number n2) {
    Number temp;
    temp.x = n1.x + n2.x;
    return temp;
}

int main() {
    cout << "Roll No: 24B11AI397\n";

    Number n1(10), n2(5), n3;

    cout << "Before operation:" << endl;
    n1.display();
    n2.display();

    n3 = n1 + n2; 

    cout << "\nAfter binary addition (n1 + n2):" << endl;
    n3.display();

    n3 = -n1;  
    cout << "\nAfter unary minus (-n1):" << endl;
    n3.display();

    return 0;
}
